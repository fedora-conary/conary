BEGIN;

CREATE TABLE Users (userId INTEGER PRIMARY KEY,
		    user STRING UNIQUE,
		    password STRING);
CREATE TABLE Labels (labelId INTEGER PRIMARY KEY,
		       label STRING UNIQUE);
CREATE TABLE TroveNames (troveNameId INTEGER PRIMARY KEY,
		         troveName STRING UNIQUE);
CREATE TABLE Permissions (userId INTEGER,
		          labelId INTEGER,
		          troveNameId INTEGER,
			  write INTEGER);
CREATE INDEX PermissionsIdx ON Permissions(userId, labelId, troveNameId);

COMMIT;
