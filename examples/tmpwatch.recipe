class Logrotate(recipe.Recipe):

    description = """Logrotate is a genuinally useful piece of code for
preventing files from growing ad nauseum"""

    buildRequires = [ "glibc" ]
    installRequires = [ "cron" ]

    name = "tmpwatch"
    version = "2.9.0"

    def setup(self):
	self.addTarball("tmpwatch-%s.tar.gz" % self.version)
	self.build = build.Make()
	self.install = build.MakeInstall(rootVar = "ROOT")

    def packages(self, root):
	return package.Auto("tmpwatch", root)
