class Logrotate(recipe.Recipe):
    description = """Logrotate is a genuinally useful piece of code for
preventing files from growing ad nauseum"""

    buildRequires = [ "glibc" ]
    runRequires = [ "cron" ]

    name = "tmpwatch"
    version = "2.9.0"

    def setup(self):
	self.addTarball("%s-%s.tar.gz" % (self.name, self.version))
	self.addSource("crond-tmpwatch")
	self.install = (build.MakeInstall(rootVar = "ROOT"),
			build.InstallFile("crond-tmpwatch", 
					  "/etc/cron.daily/tmpwatch", 0755))
