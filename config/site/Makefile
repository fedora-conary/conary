site_files =	x86	\
		x86_64	\
		linux	

dist_files = Makefile $(site_files)
# not sizeof.c or sizeof

all: default-all

install:
	mkdir -p $(DESTDIR)/etc/conary/site/; \
	for f in $(site_files); do \
		cp -a $$f $(DESTDIR)/etc/conary/site/$$f; \
	done

dist: default-dist

clean: default-clean
	rm -f sizeof

include ../../Make.rules
