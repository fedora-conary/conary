class Conary(PackageRecipe):
    description = "The Specifix Repository System"

    runRequires = [ "python" ]

    name = "conary"
    version = "@VERSION@"

    def setup(self):
	self.addArchive("conary-%(version)s.tar.bz2")
	self.Make()
	self.MakeInstall()
	# temporary
	self.ImproperlyShared(exceptions='%(datadir)s/.*')
