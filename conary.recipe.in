class Srs(PackageRecipe):
    description = "The Specifix Repository System"

    runRequires = [ "python" ]

    name = "srs"
    version = "@VERSION@"

    def setup(self):
	self.addArchive("srs-%(version)s.tar.bz2")
	self.Make()
	self.MakeInstall()
	# temporary
	self.ImproperlyShared(exceptions='%(datadir)s/.*')
