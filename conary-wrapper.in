PYTHONORDER="/usr/lib/conary/python/bin/python2.3 python2.3 python23 python"

for p in $PYTHONORDER; do
    if type $p > /dev/null 2>&1; then
	PYTHON=$p
	break
    fi
done

if [ -z "$PYTHON" ]; then
    echo "ERROR: suitable python not found"
    exit 1
fi

$PYTHON @conarydir@/`basename $0` $*
